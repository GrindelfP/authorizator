<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" maxHeight="300.0" maxWidth="400.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0"
      prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="to.grindelf.authorizator.controllers.MainController">
    <TextField fx:id="loginField" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Login"/>
    <PasswordField fx:id="passwordField" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Password"/>
    <HBox alignment="CENTER">
        <Button alignment="CENTER" onAction="#loginButtonClicked" text="Sign in"/>
        <Button onAction="#registerButtonClicked" text="Sign up"/>
    </HBox>
</VBox>
